@model List<ModelsDTO.GamesModel>
@{
    ViewData["Title"] = "My Games";
}

<h1>My Games</h1>

<div class="get-games">

    <div class="block">
        <div class="filter-options">
            <a href="#" class="option button">Filter</a>
            <a href="#" class="option button">Sort</a>
            <a class="option button nav-link" asp-area="" asp-controller="Games" asp-action="AddGame">Add</a>
        </div>
        <div id="games-list">
            <div class="items">
                <!--<span class="letter-indicator">A...</span>-->

                @{
                    int gameIdToDelete = 0;

                    foreach (ModelsDTO.GamesModel item in Model)
                    {
                        <div class="row" gameId="@item.id">
                            <div class="col title">@item.title</div>
                            <div class="col">
                                <label class="interestedLabel"><input type="checkbox">Interested</label>
                            </div>

                            <div class="col">
                                <a asp-controller="Games" asp-action="Game" asp-route-gameId="@item.id"><i class="fas fa-chevron-right"></i></a>
                                <a onclick="OpenPopup(); AddGameToDeleteId(@item.id);" href="#"><i class="fas fa-times danger"></i></a>
                            </div>
                        </div>
                    }
                }

                <!--<span class="letter-indicator">B...</span>-->
            </div>
        </div>
    </div>

</div>


<div class="popup" onclick="">
    <div class="overlay" onclick="ClosePopup()"></div>
    <div class="content">
        <p>Are you sure you want to delete?</p>
        <div class="options">
            <a href="#" onclick="ClosePopup()" class="option button ">No</a>
            <a href="#" onclick="DeleteGame( GetGameToDeleteId() );" class="option button danger">Yes</a>
        </div>
    </div>
</div>

