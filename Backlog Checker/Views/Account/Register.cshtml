@model Backlog_Checker.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register Page";
    ViewData["PageTitle"] = "register";
}

<div class="block form-block">
    <h1>Login</h1>
    <div class="wrapper">
        <form method="post">
            <div class="form-content">
                <div asp-validation-summary="All" class="text-danger" hidden></div>
                <div class="form-group" id="form-username">
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger" hidden></span>
                </div>
                <div class="form-group" id="form-email">
                    <label asp-for="Email">Email</label>
                    <input type="email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger" hidden></span>
                </div>
                <div class="form-group" id="form-password">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" hidden></span>
                </div>
                <div class="form-group" id="form-password-repeat">
                    <label asp-for="PasswordRepeat">Repeat password</label>
                    <input asp-for="PasswordRepeat" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" hidden></span>
                </div>
            </div>
            <div class="form-submit">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>

        </form>
        <div class="form-switch">
            <p>Already have an account?</p> <a asp-area="" asp-controller="Account" asp-action="Login">Login here</a>
        </div>
    </div>
</div>